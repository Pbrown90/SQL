--display the database ordered by name.
SELECT * FROM artists ORDER BY name asc;

--who are all the artists that were born in Gary,IN?
SELECT name,hometown FROM artists WHERE hometown = 'Gary,IN';

--what are the names of all the male artists in the table?
SELECT name FROM artists WHERE gender = 'Male';


